{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/TestRunner.ts"
  ],
  "exclude": [
    "node_modules", 
    "**/*.test.ts",
    "OtterDoc.ts"
  ]
}